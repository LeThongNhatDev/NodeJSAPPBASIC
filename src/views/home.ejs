<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/create">create user</a>
    </div>
    <h1 style="text-align: center; color: #333;">Danh sách thông tin</h1>
    <table>
        <thead>
            <tr>
                <th>STT</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Nơi ở</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <% if (listUser && listUser.length> 0) { %>
            <% listUser.forEach((user, index)=> { %>
                <tr>
                    <td>
                        <%= index + 1 %>
                    </td> <!-- STT -->
                    <td>
                        <%= user.name %>
                    </td> <!-- Họ tên -->
                    <td>
                        <%= user.email %>
                    </td> <!-- Email -->
                    <td>
                        <%= user.city %>
                    </td> <!-- Nơi ở -->
                    <td>
                        <form action="/delete-user/<%= user.id %>" method="POST"
                            style="width: auto !important; padding: 0 !important; border: none;">
                            <button type="submit" style="width: 100%; height: 100%;">
                                Xóa
                            </button>
                        </form>
                        <a href="/detail-user/<%= user.id %>"><button
                                style="width: 100%; height: 100%;">edit</button></a>
                    </td>
                </tr>
                <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" style="text-align: center; color: red;">Không có dữ liệu</td>
                        </tr>
                        <% } %>
    </table>
</body>

</html>